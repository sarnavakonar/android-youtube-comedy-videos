<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sarnava.myassignment.LoginActivity"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"
        android:alpha=".4"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Videoing"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="#f5f5f5"
        android:alpha=".9"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Find all your comedy videos here"
        android:textSize="18dp"
        android:textColor="#f5f5f5"
        android:alpha=".6"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_above="@+id/condn"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:padding="8.5dp"
        android:drawableLeft="@drawable/google_icon"
        android:text="sign in with google"
        android:textSize="17dp"
        android:textColor="#76a7a5"
        android:onClick="google_signin"/>

    <TextView
        android:id="@+id/condn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="By signing in you accept to our terms and conditions"
        android:textSize="13.5dp"
        android:textColor="#ffffff"/>

</RelativeLayout>
